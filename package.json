{
	"name": "klang-support",
	"displayName": "Klang Support",
	"description": "klang (ksystem proprietary language) syntax highlighting, formatter, and AutoComplete",
	"publisher": "NeoSwitchh",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.101.0"
	},
	"categories": [
		"Programming Languages",
		"Formatters"
	],
	"activationEvents": [
		"onLanguage:klang"
	],
	"contributes": {
		"languages": [
			{
				"id": "klang",
				"aliases": [
					"Klang"
				],
				"filenames": [],
				"filenamePatterns": [
					"sct*",
					"tmp_*"
				],
				"comments": {
					"blockComment": [
						"/*",
						"*/"
					]
				}
			}
		],
		"grammars": [
			{
				"language": "klang",
				"scopeName": "source.klang",
				"path": "./syntaxes/klang.tmLanguage.json"
			}
		],
		"configuration": {
			"title": "Klang Support",
			"properties": {
				"klangSupport.enableFormatter": {
					"type": "boolean",
					"default": true,
					"description": "Enable/disable Klang formatter"
				}
			}
		}
	},
	"main": "./out/extension.js",
	"scripts": {
		"vscode:prepublish": "tsc -p ./"
	},
	"devDependencies": {
		"@types/node": "^24.5.1",
		"@types/vscode": "^1.104.0",
		"tslint": "^6.1.3",
		"typescript": "^5.9.2",
		"vscode": "^1.1.37"
	},
	"semanticTokenScopes": [
		{
			"language": "klang",
			"scopes": {
				"comment.block.klang": [
					"comment"
				],
				"string.quoted.double.klang": [
					"string"
				],
				"constant.numeric.klang": [
					"number"
				],
				"keyword.control.klang": [
					"keyword"
				],
				"keyword.operator.klang": [
					"operator"
				],
				"entity.name.section.klang": [
					"namespace"
				],
				"entity.name.function.klang": [
					"function"
				],
				"support.function.calc.klang": [
					"function"
				],
				"support.function.dbcalc.klang": [
					"function"
				],
				"support.function.hook.klang": [
					"function"
				],
				"constant.language.klang": [
					"variable.language"
				],
				"support.constant.directive.klang": [
					"macro"
				],
				"keyword.other.permit.klang": [
					"keyword"
				],
				"entity.name.macro.klang": [
					"macro"
				]
			}
		}
	]
}
